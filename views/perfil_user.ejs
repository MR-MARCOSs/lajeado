<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil de Usuário</title>
    <link rel="stylesheet" href="./css/style_user.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300&family=Montserrat&family=Varela+Round&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <div class="top-header">
            <div class="container1">
                <a href="/home" class="logo-link"><img src="img/Logo_lageado.png" alt="Logo prefeitura de Lageado"></a>
                <div class="perfil">
                    <a href="/perfil_user"><img src="img/Perfil_User.png" alt="Perfil de usuário" id="perfil-icon"></a>
                    <% if (user) { %>
                        <p><%= user.name %></p>
                        <a href="/logout">Logout</a>
                    <% } else { %>
                        <a href="/login">Login</a>
                    <% } %>
                </div>
           </div>
        </div>
    </header>
    <div class="body-section">
        <div class="container">
            <section class="dados">
                <h2>Dados Pessoais</h2>
                <img src="./img/perfil 2.png" alt="Foto de Perfil">
                <div class="informacoes">
                    <div class="info-item">
                        <p class="titulo">Nome Completo:</p>
                        <p id="nome"><%= user.name %></p>
                    </div>
                    <div class="info-item">
                        <p class="titulo">E-mail:</p>
                        <p id="email"><%= user.email %></p>
                    </div>
                    <div class="info-item">
                        <p class="titulo">CPF:</p>
                        <p id="cpf-number"><%= user.cpf %></p>
                    </div>
                    <div class="info-item">
                        <p class="titulo">Telefone:</p>
                        <p id="tel"><%= user.phone %></p>
                    </div>
                    <button id="botao2">Editar Perfil <img src="./img/lapis.png" alt="Editar"></button>
                </div>
            </section>

            <section class="solic">
                <h2>Solicitações</h2>
                <div class="status-solicitacoes">
                    <div class="pendentes">
                        <h3>Pendentes:</h3>
                        <div class="box1">
                            <% if (solicitacoesPendentes && solicitacoesPendentes.length > 0) { %>
                              <% solicitacoesPendentes.forEach(solicitacao => { %>
                                <div class="solicitacao-item">
                                  <p>Nº do protocolo: <%= solicitacao.docId %></p>
                                  <p>Data de criação: <%= new Date(solicitacao.createdAt).toLocaleString("pt-BR") %></p>
                                </div>
                              <% }); %>
                            <% } else { %>
                              <p>Nenhuma solicitação pendente.</p>
                            <% } %>
                          </div>
                    </div>

                  <div class="em-analise">
                      <h3>Em Análise:</h3>
                      <div class="box2">
                          <% /* Aqui você vai iterar sobre as solicitações em análise e exibir cada uma */ %>
                      </div>
                  </div>


                </div>
            </section>
        </div>
    </div>
</body>
</html>